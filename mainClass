package SortingVisualzation.Sorting_visuazation;
    import java.util.Scanner;

    public class mainClass {

        public static void main(String[] args) {

            Scanner sc = new Scanner(System.in);
            SortingAlgorithms sorter = new SortingAlgorithms();

            while (true) {

                System.out.println("\n===== SORTING VISUALIZER (Console Version) =====");
                System.out.println("0 - Generate New Array");
                System.out.println("1 - Selection Sort");
                System.out.println("2 - Insertion Sort");
                System.out.println("3 - Bubble Sort");
                System.out.println("4 - Merge Sort");
                System.out.println("5 - Quick Sort");
                System.out.println("6 - Heap Sort");
                System.out.println("7 - Display Array");
                System.out.println("Q - Quit");
                System.out.print("Enter choice: ");
                String choice = sc.next();

                switch (choice) {

                    case "0":
                        sorter.generateArray();
                        System.out.println("New random array generated.");
                        break;

                    case "1":
                        System.out.println("Selection Sort Running...");
                        sorter.selectionSort();
                        break;

                    case "2":
                        System.out.println("Insertion Sort Running...");
                        sorter.insertionSort();
                        break;

                    case "3":
                        System.out.println("Bubble Sort Running...");
                        sorter.bubbleSort();
                        break;

                    case "4":
                        System.out.println("Merge Sort Running...");
                        sorter.mergeSort(0, sorter.arr.length - 1);
                        break;

                    case "5":
                        System.out.println("Quick Sort Running...");
                        sorter.quickSort(0, sorter.arr.length - 1);
                        break;

                    case "6":
                        System.out.println("Heap Sort Running...");
                        sorter.heapSort();
                        break;

                    case "7":
                        sorter.displayArray();
                        break;

                    case "Q":
                    case "q":
                        System.out.println("Exiting...");
                        System.exit(0);

                    default:
                        System.out.println("Invalid Input!");
                }
            }
        }
    }


